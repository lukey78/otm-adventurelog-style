<Style name="contour-text">
	<!-- 100 m -->
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom13;
		<Filter>([height] % 100 = 0) and ([height] != 0)</Filter>
		<TextSymbolizer fontset-name="sans-book" size="3" fill="#666666" upright="left" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" halo-comp-op="soft-light" placement="line" max-char-angle-delta="10" label-position-tolerance="100" minimum-path-length="200" spacing="200">[height]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom15;
		<Filter>([height] % 100 = 0) and ([height] != 0)</Filter>
		<TextSymbolizer fontset-name="sans-book" size="7" fill="#666666" upright="left" halo-radius="1" halo-fill="rgba(255,255,255,0.6)" halo-comp-op="soft-light" placement="line" max-char-angle-delta="10" label-position-tolerance="100" minimum-path-length="200" spacing="200">[height]</TextSymbolizer>
	</Rule>

	<!-- 20 m -->
	<Rule>
		&maxscale_zoom16;
		&minscale_zoom17;
		<Filter>([height] % 20 = 0) and ([height] != 0)</Filter>
		<TextSymbolizer fontset-name="sans-book" size="8" fill="#666666" upright="left" halo-radius="1" halo-fill="rgba(255,255,255,0.6)" halo-comp-op="soft-light" placement="line" max-char-angle-delta="10" label-position-tolerance="100" minimum-path-length="300" spacing="800">[height]</TextSymbolizer>
	</Rule>
</Style>
